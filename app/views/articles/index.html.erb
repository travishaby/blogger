<div class="well text-center">
  <h1>Articles</h1>
</div>
<div class="row">
  <% @articles.each do |article| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <p><%= link_to article.title, article_path(article.slug) %></p>
        <div class="row">
          <div class="col-md-2 btn btn-default"><%= link_to 'Edit', edit_article_path(article.slug) %></div>
          <div class="col-md-2-right btn btn-default"><%= link_to 'Delete', article_path(article.slug), method: :delete %></div>
        </div>
      </br>
        <div class="well"><%= article.body %></div>
      </div>
    </div>
  </div>
  <% end %>
</div>
