<h2 class="text-center"><%= @article.title %></h2>

<div class="col-md-12 text-center">
  <div class="row">
    <div class="col-md-2-right btn btn-default"><%= link_to 'Edit', edit_article_path(@article.slug) %></div>
    <div class="col-md-2-right btn btn-default"><%= link_to 'Delete', article_path(@article.slug), method: :delete %></div>
  </div>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= @article.body %>
    </div>
  </div>
</div>
